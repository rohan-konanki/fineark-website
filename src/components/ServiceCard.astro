---
// src/components/ServiceCard.astro
// Defines the expected props for this component
interface Props {
    title: string;
    description: string;
    features: string[]; // Array of key features/bullet points
}

// Destructure the props
const { title, description, features } = Astro.props;
---
<div class="service-full-card">
    <div class="card-content">
        <h3>{title}</h3>
        <p class="card-description">{description}</p>
        <ul class="card-features">
            {features.map(feature => (
                <li>
                    <svg class="check-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    {feature}
                </li>
            ))}
        </ul>
    </div>
    <div class="card-footer">
        <a href="/contact" class="button secondary card-button">Learn More &rarr;</a>
    </div>
</div>

<style>
    .service-full-card {
        background-color: white;
        border-radius: var(--border-radius);
        padding: var(--spacing-md);
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        display: flex;
        flex-direction: column; /* Stack header, content, footer vertically */
        justify-content: space-between; /* Pushes button to bottom */
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%; /* Important for grid alignment, makes all cards in a row equal height */
        box-sizing: border-box; /* Ensure padding doesn't cause overflow */
    }

    .service-full-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    .card-content {
        flex-grow: 1; /* Allows content to take up available space, pushing footer down */
    }

    .service-full-card h3 {
        font-size: 1.8rem; /* Slightly larger heading without icon */
        color: var(--color-primary);
        margin-top: 0; /* Remove default h3 top margin */
        margin-bottom: 1rem;
        line-height: 1.3;
    }

    .card-description {
        font-size: 1rem;
        line-height: 1.6;
        color: var(--color-text-dark);
        margin-bottom: 1.5rem;
    }

    .card-features {
        list-style: none;
        padding: 0;
        margin-bottom: 2rem; /* Space before the button */
    }

    .card-features li {
        display: flex;
        align-items: flex-start; /* Align checkmark and text at the top */
        margin-bottom: 0.8rem;
        font-size: 0.95rem;
        color: var(--color-text-dark);
        line-height: 1.4;
    }

    .check-icon {
        color: var(--color-accent); /* Your accent color */
        margin-right: 0.7rem;
        flex-shrink: 0; /* Prevent icon from shrinking */
        transform: translateY(2px); /* Adjust vertical alignment for checkmark */
    }

    .card-footer {
        margin-top: auto; /* Pushes the footer to the bottom of the flex container */
    }

    .card-button {
        align-self: flex-start; /* Align button to the left within the card */
        /* The button itself inherited styles from BaseLayout.astro are fine */
    }
</style>