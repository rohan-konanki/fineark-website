---
// src/components/ServicesOverview.astro
const services = [
    {
        title: "Cloud Solutions",
        description: "Migrate and optimize your infrastructure on leading cloud platforms like AWS, Azure, and Google Cloud.",
        icon: "/icons/cloud.svg", // Placeholder icon
        link: "/services/cloud"
    },
    {
        title: "Cybersecurity",
        description: "Protect your business from threats with robust security strategies, compliance, and incident response.",
        icon: "/icons/security.svg",
        link: "/services/cybersecurity"
    },
    {
        title: "Custom Software Development",
        description: "Build bespoke applications tailored to your unique business processes and customer needs.",
        icon: "/icons/code.svg",
        link: "/services/software-development"
    },
    {
        title: "IT Strategy & Consulting",
        description: "Develop a clear technology roadmap that aligns with your business goals and drives innovation.",
        icon: "/icons/strategy.svg",
        link: "/services/it-strategy"
    }
];
---
<section class="services-overview-section">
    <div class="container">
        <h2>Our Core Services</h2>
        <p class="section-description">We partner with you to deliver innovative and reliable technology solutions that solve your challenges and drive growth.</p>
        <div class="services-grid">
            {services.map(service => (
                <a href={service.link} class="service-card">
                    <img src={service.icon} alt={service.title + " icon"} width="64" height="64" class="service-icon" />
                    <h3>{service.title}</h3>
                    <p>{service.description}</p>
                    <span class="read-more">Learn More &rarr;</span>
                </a>
            ))}
        </div>
        <div class="view-all-services">
            <a href="/services" class="button primary">View All Services</a>
        </div>
    </div>
</section>

<style>
    .services-overview-section {
        background-color: var(--color-background);
        padding: var(--spacing-lg) 0;
        text-align: center;
    }

    .services-overview-section h2 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        color: var(--color-primary);
    }

    .section-description {
        font-size: 1.15rem;
        max-width: 800px;
        margin: 0 auto 3rem auto;
        color: var(--color-text-dark);
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: var(--spacing-md);
        margin-bottom: var(--spacing-lg);
    }

    .service-card {
        background-color: white;
        border-radius: var(--border-radius);
        padding: var(--spacing-md);
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        text-align: left;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-decoration: none; /* Remove underline from card link */
        color: inherit; /* Inherit text color */
    }

    .service-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    }

    .service-icon {
        width: 48px;
        height: 48px;
        margin-bottom: 1rem;
    }

    .service-card h3 {
        font-size: 1.5rem;
        color: var(--color-secondary);
        margin-bottom: 0.5rem;
    }

    .service-card p {
        font-size: 1rem;
        line-height: 1.6;
        color: var(--color-text-dark);
        flex-grow: 1; /* Allows description to take up available space */
    }

    .service-card .read-more {
        margin-top: 1rem;
        color: var(--color-secondary);
        font-weight: 600;
        display: inline-block;
    }

    .service-card:hover .read-more {
        text-decoration: underline;
    }

    .view-all-services {
        margin-top: var(--spacing-md);
    }
</style>